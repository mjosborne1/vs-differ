{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Debug Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "unittest",
            "args": [
                "tests.test_vs_differ",
                "-v"
            ],
            "cwd": "${workspaceFolder}/vs-differ",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Python: Debug Single Test",
            "type": "debugpy",
            "request": "launch",
            "module": "unittest",
            "args": [
                "tests.test_vs_differ.IntegrationTests.test_expand_real_ncts_valueset",
                "-v"
            ],
            "cwd": "${workspaceFolder}/vs-differ",
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}